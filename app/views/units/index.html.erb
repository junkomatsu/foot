<h1>Listing units</h1>

<table>
  <tr>
    <th>User</th>
    <th>Status</th>
    <th>Icon</th>
    <th>Data</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @units.each do |unit| %>
  <tr>
    <td><%= unit.user.id_str %></td>
    <td><%= unit.status %></td>
    <td><%= unit.icon %></td>
    <td><%= unit.data %></td>
    <td><%= link_to 'Show', user_unit_path(unit, :user_id => unit.user) %></td>
    <td><%= link_to 'Edit', edit_user_unit_path(unit, :user_id => unit.user) %></td>
    <td><%= link_to 'Destroy', user_unit_path(unit, :user_id => unit.user), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

